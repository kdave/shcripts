#!/bin/sh
# force push branch to remote 'gh-stable'

function current_branch() {
	git_dir=$(git rev-parse --git-dir 2> /dev/null) || exit 1
	ref=$(git symbolic-ref HEAD 2> /dev/null) || exit 1
	br=${ref#refs/heads/}
	echo "$br"
}

if [ $# = 0 ]; then
	br=$(current_branch)
	echo "GH-STABLE: Silently forced push of $br"
	git push gh-stable +"$br"
	exit
fi

echo git push gh-stable "$@"
git push gh-stable "$@"
